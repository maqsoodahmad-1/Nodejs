{{!-- view for image page --}}
{{!-- This code block will define the bulk content that will be displayed to the user --}}
<div class="panel panel-primary">
    <div class="panel-heading">
        {{!-- Display title of the image --}}
        <h2 class="panel-title">{{iamge.title}}</h2>
    </div>

        {{!-- Display the description of the image  --}}
    <div class="panel-body">
        <p>{{image.description}}</p>
        <div class="col-md-12 text-center">
            <img src="/public/upload/{{image.filename}}"
             class="img-thumbnail">
        </div>
    </div>

    <div class="panel-footer">
        <div class="row">
            <div class="clo-md-8">
                <button class="btn btn-success" id="btn-like"
                  data-id="{{ image.uniqueId }}"><i class="fa fa-heart">Like</i>
                </button>
                    {{!-- Display the likes  --}}
                <strong class="likes-count">{{image.likes}}
                </strong> &nbsp; - &nbsp; <i class=" fa fa-eye">
                        {{!-- Display the views --}}
                </i> <strong>{{ image.views }}</strong>
                        {{!-- Display the time when the image is uploaded --}}
                &nbsp; - &nbsp; Posted:<em class="text-muted">
                    {{ timeago iamge.timestamp }}</em>
            </div>
        </div>
    </div>
</div>

{{!-- This code block defines the form that will allow user to comment to images --}}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-8">
                <strong class="panel-title">Comments</strong>
            </div>
            <div class="col-md-4 text-right">
                <button class="btn btn-default btn-sm" id="btn-comment" data-id="{{ iamge.uniqueId }}">
                    <i class="fa fa-comment-o">Post Comment...</i>
                 </button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <blockquote id="post-comment">
            <div class="row">
                {{!-- This code block defines a form that will allow user 
                   --  to enter the name email address and comments --}}
                   <form method="post" action="/images/{{iamge.uniqueId}}/comment">
                                {{!-- Name Feild --}}
                        <div class="form-group col-sm-12">
                            <label class="col-sm-2 control-label"
                            for="name">Name:</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" name="name" >
                            </div> 
                        </div>

                                {{!-- Email Section --}}
                        <div class="form-group col-sm-12">
                            <label class="col-sm-2 control-label"
                              for="email">Emial:</label>
                              <div class="col-sm-10">
                                <input class="form-control"
                                  type="text" name="email">
                              </div>
                        </div>
                                {{!-- Comment section --}}
                        <div class="form-group col-sm-12">
                            <label class="col-sm-2 control-label"
                              for="comment">Comment:</label>
                              <div class="col-sm-10">
                                <textarea class="form-control"
                                name="comment" rows="2"></textarea>
                              </div>
                        </div>
                                {{!-- Submit Button --}}
                        <div class="form-group col-sm-12">
                            <div class="col-sm-12 text-right">
                                <button type="submit" id="comment-btn"
                                 class="btn btn-success" type="button">
                                 <i class="fa fa-comment"></i>
                                 Post</button>
                            </div>
                        </div>
                   </form>

            </div>
        </blockquote>

        {{!-- The code block below is used to dispaly the comments that have been submitted --}}

        <ul class="media-list">
            {{ #each comments }}
            <li class="media">
                <a class="pull-left" href="#">
                    <imag class="media-object image-circle"
                     src="http://www.gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
                     </imag>
                </a>
                <div class="media-body">
                    {{ comment }}
                    <br/><strong class="media-heading">
                        {{ name }}
                    </strong> <small class="text-muted">
                        {{ timeago timestamp}}
                    </small>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>